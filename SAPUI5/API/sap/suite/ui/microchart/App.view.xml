<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:mchart="sap.suite.ui.microchart"
    controllerName="zms.App">

    <Text text="{zms>/list}"></Text>

    <VBox
        width="300px"
        height="300px">
        <mchart:InteractiveDonutChart
            selectionChanged="press"
            segments="{ path: 'zms>/list' }">
            <mchart:InteractiveDonutChartSegment
                label="{zms>label}"
                value="1"
                displayedValue="1"
                color="Error"/>
        </mchart:InteractiveDonutChart>
    </VBox>

</mvc:View>
