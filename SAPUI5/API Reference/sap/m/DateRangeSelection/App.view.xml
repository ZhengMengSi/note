<mvc:View controllerName="zms.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:t="sap.ui.table">
    <t:Table rows="{/arr}">
        <t:columns>
            <t:Column>
                <t:template>
                    <DateRangeSelection 
                        dateValue="{dateValueDRS1}" 
                        secondDateValue="{secondDateValueDRS1}"
                        change=".handleChange"/>
                </t:template>
            </t:Column>
        </t:columns>
    </t:Table>

    <DateRangeSelection id="DRS1" delimiter="{path:'/arr/0/delimiterDRS1'}" dateValue="{path:'/arr/0/dateValueDRS1'}" secondDateValue="{path:'/arr/0/secondDateValueDRS1'}" displayFormat="{path:'/arr/0/dateFormatDRS1'}" change="handleChange"/>
</mvc:View>